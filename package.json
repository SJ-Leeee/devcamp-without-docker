    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.0",
    "typeorm-transactional": "^0.4.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
