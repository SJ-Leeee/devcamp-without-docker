    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.10",
    "@nestjs/typeorm": "^10.0.2",
    "@types/argon2": "^0.15.0",
    "@types/uuid": "^9.0.2",
    "argon2": "^0.31.1",
    "chokidar": "^3.5.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "express-basic-auth": "^1.2.1",
    "js-yaml": "^4.1.0",
